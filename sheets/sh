# Shell head
#!/bin/bash

# 变量定义，注意：等号前后不能有空格
BCS_URL=https://github.com/jiangxianzeng/bcs.sh

# 变量使用
echo ${BCS_URL}  #推荐
echo $BCS_URL

# if条件
if condition1 ; then
    command1
elif condition2 ; then 
    command2
else
    commandN
fi

# if例子
a=10
b=20
if [ $a == $b ] ; then
   echo "a 等于 b"
elif [ $a -gt $b ] ; then
   echo "a 大于 b"
else
   echo "没有符合的条件"
fi

